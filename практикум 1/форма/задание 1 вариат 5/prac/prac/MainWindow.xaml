<Window x:Class="prac.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prac"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="299">
    <Grid Margin="0,0,-8,-5">
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="17" Margin="10,10,0,0" TextWrapping="Wrap" Text="A" VerticalAlignment="Top" Width="14" TextChanged="textBox_TextChanged" IsReadOnly="True"/>
        <TextBox x:Name="a" HorizontalAlignment="Left" Height="23" Margin="10,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.5,0.5" TextChanged="a_TextChanged">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.677"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox x:Name="textBox_Copy" HorizontalAlignment="Left" Height="17" Margin="10,70,0,0" TextWrapping="Wrap" Text="B" VerticalAlignment="Top" Width="14" TextChanged="textBox_TextChanged" IsReadOnly="True" RenderTransformOrigin="8.643,3.471"/>
        <TextBox x:Name="b" HorizontalAlignment="Left" Height="23" Margin="10,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button" Content="Проверка" HorizontalAlignment="Left" Margin="10,244,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <TextBox x:Name="r" HorizontalAlignment="Left" Height="23" Margin="10,202,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True" TextChanged="r_TextChanged"/>
        <TextBox x:Name="textBox_Copy2" HorizontalAlignment="Left" Height="17" Margin="10,180,0,0" TextWrapping="Wrap" Text="Решение" VerticalAlignment="Top" Width="75" TextChanged="textBox_TextChanged" IsReadOnly="True" RenderTransformOrigin="8.643,3.471"/>

    </Grid>
</Window>
